{
	"name": "@wonglok831/codetown",
	"version": "0.0.0",
	"description": "codetown is a place to code and have fun",
	"license": "MIT",
	"repository": "wonglok/codetown",
	"funding": "https://www.paypal.com/paypalme/wonglok",
	"author": {
		"name": "lok wong",
		"url": "https://wonglok.com"
	},
	"type": "module",
	"bin": {
		"codetown": "./src/server/cli.js"
	},
	"preferGlobal": true,
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"first-time": "npm publish --access public",
		"deploy": "vite build; publish --on-build",
		"start": "vite build; NODE_ENV=production tsx ./src/server/cli.js",
		"build": "vite build",
		"dev": "NODE_ENV=development nodemon -w ./src -w ./public -x tsx ./src/server/cli.js",
		"test": "node ./src/server/cli.js"
	},
	"files": [
		"./src/server",
		"./dist"
	],
	"keywords": [
		"cli",
		"codetown"
	],
	"dependencies": {
		"express": "^5.1.0",
		"meow": "^13.2.0",
		"publish": "^0.6.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"socket.io": "^4.8.3",
		"socket.io-client": "^4.8.3",
		"tsx": "^4.19.3",
		"typescript": "^5.8.3",
		"vite-express": "*"
	},
	"devDependencies": {
		"@types/express": "^5.0.1",
		"@types/node": "^22.15.2",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.4.1",
		"nodemon": "^3.1.10",
		"vite": "^6.3.3"
	}
}
